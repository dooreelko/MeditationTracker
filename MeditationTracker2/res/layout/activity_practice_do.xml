<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeDoActivity" 
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editMalaCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:minEms="3"
            android:text="@string/dummy_practice_current_mala_count" />

        <TextView
            android:id="@+id/textCurrentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/times"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editMalaSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:minEms="4"
            android:text="@string/dummy_practice_scheduled_count" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equals"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editSessionCompletedCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/dummy_practice_done_today" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonAddMala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:background="@color/transparent"
        android:contentDescription="@string/practiceImage"
        android:cropToPadding="true"
        android:focusableInTouchMode="true"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sixteenth_karmapa" >
        <requestFocus />
    </ImageButton>

    <TextView
        android:id="@+id/textTapToAddMala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/buttonAddMala"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/text_bg_meditracker"
        android:gravity="center"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:text="@string/tap_the_image_to_add_mala"
        android:textColor="@color/text_fg_meditracker"
        android:textStyle="italic" />

</RelativeLayout>