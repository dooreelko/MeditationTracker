<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meditationtracker2"
    android:versionCode="1"
    android:versionName="1.0" xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="MeditationTrackerApplication">
        <activity
            android:name="com.meditationtracker2.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="sensorPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.meditationtracker2.PracticeDetailActivity"
            android:label="@string/title_activity_practice_detail"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity
            android:name="com.meditationtracker2.PracticeDoActivity"
            android:label="@string/title_activity_practice_do"
            android:screenOrientation="sensorPortrait" >
        </activity>
        <activity
            android:name="com.meditationtracker2.PracticeEditActivity"
            android:label="@string/title_activity_edit_practice"
            android:screenOrientation="sensorPortrait">
        </activity>
        <activity
            android:name="com.meditationtracker2.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        
        <provider
            android:name="com.meditationtracker2.content.PracticeImageProvider"
            android:authorities="com.meditationtracker2.images" 
            android:exported="true"
            android:icon="@drawable/ic_launcher"
            android:label="Various visualisation images used in Buddhist meditations" 
            tools:ignore="ExportedContentProvider">
        </provider>
        
    </application>

</manifest>
